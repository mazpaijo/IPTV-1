<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical"
        android:background="@drawable/selector_menu_bg2">

        <cn.com.pcalpha.iptv.widget.MenuListView
            android:id="@+id/setting_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/blank"
            android:dividerHeight="0px"
            android:choiceMode="singleChoice"
            android:focusable="true"
            android:listSelector="@drawable/selector_settings" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/setting_option_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
